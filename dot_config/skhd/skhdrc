# Changing Focus

# change window focus within space
rcmd - j : yabai -m window --focus south
rcmd - k : yabai -m window --focus north
rcmd - h : yabai -m window --focus west
rcmd - l : yabai -m window --focus east

# change focus betwee external displays
rcmd - a : yabai -m display --focus west
rcmd - d : yabai -m display --focus east

# Modifying the layout of the active window
ralt - r : yabai -m space --rotate 270
ralt - y : yabai -m space --mirror y-axis
ralt - x : yabai -m space --mirror x-axis
ralt - f : yabai -m window --toggle float --grid 4:4:1:1:2:2
rcmd - f : yabai -m window --toggle zoom-fullscreen
rcmd - b : yabai -m space --balance

# Moving windows around

# swap
ralt - j : yabai -m window --swap north
ralt - k : yabai -m window --swap south
ralt - h : yabai -m window --swap west
ralt - l : yabai -m window --swap east

# move window to next display
ralt - a : yabai -m window --display west; yabai -m display --focus west;
ralt - d : yabai -m window --display east; yabai -m display --focus east;

# move window to space #
rcmd - 1 : yabai -m window --space 1
rcmd - 2 : yabai -m window --space 2
rcmd - 3 : yabai -m window --space 3
rcmd - 4 : yabai -m window --space 4
rcmd - 5 : yabai -m window --space 5
rcmd - 6 : yabai -m window --space 6
rcmd - 7 : yabai -m window --space 7
rcmd - 8 : yabai -m window --space 8
rcmd - 9 : yabai -m window --space 9
rcmd - 0 : yabai -m window --space last
